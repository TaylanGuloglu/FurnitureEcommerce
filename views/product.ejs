<%- include('partials/_header') %>


<%- include('partials/_navigation') %>


    


<div id="overviews" class="section wb">
    <div class="container">
        <div class="row"> 
            <div class="col-lg-9 blog-post-single">
                <div class="blog-item">
                    <div class="image-blog">
                        <br />
                        <br />
                        <img src="/images/comingsoon.jpg" alt="" class="img-fluid">
                    </div>
                    <div class="post-content">
                        <div class="blog-title">
                            <h2><a title=""><%= product.name %> </a></h2>
                            <h3><%= product.description %></h3>
                            <h3><%= product.price %></h3>
                        </div>
                        <div class="post-date">
                            <form method="POST" action="/courses/enroll">
                                <input type="hidden" name="course_id" value="<%= product._id %>">
                                <button class="btn btn-lg btn-warning text-white"><span>Add to Cart</span></button>
                            </form>
                        </div>							
                    </div>
                </div>
                
                
            </div>
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->

<br/>
<%- include('partials/_footer') %>